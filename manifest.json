{
  "manifest_version": 3,
  "name": "Website Privacy Inspector",
  "version": "1.0",
  "description": "Analyzes websites for privacy risks such as cookies, trackers, and scripts.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "cookies",
    "alarms",
    "downloads"
  ],
  "host_permissions": [
    "*://*/*",
    "*://easylist.to/*",
    "*://githubusercontent.com/*"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/maliciousIndicators.json",
        "scripts/trackers.json"  
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Privacy Analyzer"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ]
}
